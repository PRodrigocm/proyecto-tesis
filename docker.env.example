# ============================================
# Variables de entorno para Docker
# Copiar este archivo como .env y configurar los valores
# ============================================

# Base de datos PostgreSQL
# Para Docker: usar "db" como host (nombre del servicio)
# Para local: usar "localhost"
DATABASE_URL="postgresql://postgres:123456@db:5432/postgres?schema=proyecto-1"

# JWT Secret (cambiar en producción)
JWT_SECRET="TU_SECRETO_JWT_SEGURO_MINIMO_32_CARACTERES"

# Puerto de la aplicación
PORT=3000

# ============================================
# Email (Gmail SMTP) - ACTIVO
# ============================================
GMAIL_USER="tu_email@gmail.com"
GMAIL_APP_PASSWORD="xxxx xxxx xxxx xxxx"

# Legacy (algunos componentes pueden usar estos)
EMAIL_USER="tu_email@gmail.com"
EMAIL_PASSWORD="xxxx xxxx xxxx xxxx"

